mixin row_subforum(subforum, global)
	a(href=global.url_prefix + '/f/' + subforum.id)
		.pure-u-1.row.forum
			.type forum
			.name!=subforum.name

mixin row_thread(thread, subforum_id, global)
	a(href=global.url_prefix + '/f/' + subforum_id + '/t/' + thread.id)
		.pure-u-1.row.thread
			.type thread
			.title!=thread.title


mixin row_post(post)
	.pure-u-1.row.post
		if post.user
			.post-title
				a.username(href=global.url_prefix + '/user/' + post.user.username)!=post.user.username
				.time!=post.time
		.post-body!=post.body.replace(/\n/g, '<br />')