include ../../../views/partials
extends ../../../views/layout

block content
	h1 Create new thread
	.form.pure-form(action=global.url + '/post' method="post")
		fieldset.pure-group
			legend Create new thread
			input(type="text" placeholder="Title" id="title" required)
			textarea.pure-input-1-3(placeholder="Content" it="body" required)
			input.pure-button.button-success(type="submit" value="Create")