include ../../../views/partials
extends ../../../views/layout

block content
	h1 Create new subforum
	if global.query.error
		.msg-error!=global.query.error
	form.pure-form(action=global.url + '/post' method="post")
		fieldset.pure-group
			legend Create new subforum
			input(type="text" placeholder="Name" name="name" required)
			input.pure-button.button-success(type="submit" value="Create")