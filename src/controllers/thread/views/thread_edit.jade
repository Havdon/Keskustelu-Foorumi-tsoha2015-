include ../../../views/partials
extends ../../../views/layout

block content
	h1 Create new thread
	if error
		.msg-error!=error
	form.pure-form(action=global.url method="post")
		fieldset.pure-group
			legend Create new thread
			input(type="text" placeholder="Title" name="title" value=thread.title required)
			input(type="hidden" name="thread_id" value=thread.thread_id)
			textarea.pure-input-1-3(placeholder="Content" name="body" required)!=thread.body
			input.pure-button.button-success(type="submit" value="Update")